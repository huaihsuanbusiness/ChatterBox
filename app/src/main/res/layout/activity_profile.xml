<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/profilebackground"
    tools:context=".Account.ProfileActivity">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorBlack"
        android:src="@mipmap/empty_profile" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Name"
        android:textColor="@color/colorWhite"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/profile_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="status"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/profile_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />
    <Button
        android:id="@+id/profile_btn_send"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_count"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorGrapeFruitDark"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="16sp"

        android:textColor="@color/colorWhite" />
    <Button
        android:id="@+id/profile_btn_decline"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_btn_send"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="16sp"
        android:text="Decline request"
        android:textColor="@color/colorGrapeFruitDark" />
</RelativeLayout>